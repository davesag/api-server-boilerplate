{
  "name": "@davesag/api-server-boilerplate",
  "version": "1.0.1",
  "description": "Dave Sag's boilerplate code for a swagger based API server",
  "main": "index.js",
  "engines": {
    "node": ">= 10.15.3",
    "npm": ">= 6.5.0"
  },
  "scripts": {
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "lint": "eslint .",
    "prettier": "prettier --write '**/*.{js,json,md}'",
    "start": "NODE_PATH=. node index.js",
    "swagger": "docker-compose up -d swagger",
    "test": "npm run test:unit",
    "test:all": "npm run test:unit; npm run test:integration",
    "test:unit": "NODE_ENV=test NODE_PATH=. mocha --require ./test/unit/testHelper.js --spec ./test/unit/**/*.test.js",
    "test:unit:cov-x": "NODE_ENV=test NODE_PATH=. nyc mocha --require ./test/unit/testHelper.js --spec ./test/unit/**/*.test.js",
    "test:unit:cov": "find ./test/unit -name '*.test.js' | NODE_ENV=test NODE_PATH=. xargs nyc mocha --require ./test/unit/testHelper.js",
    "test:server": "NODE_ENV=test NODE_PATH=. mocha --require ./test/server/testHelper.js --spec ./test/server/**/*.test.js --file ./test/server/testInit.js",
    "test:mutants": "NODE_ENV=test NODE_PATH=. npx stryker run"
  },
  "keywords": [
    "swagger",
    "express",
    "nodejs",
    "api",
    "server",
    "boilerplate"
  ],
  "author": "Dave Sag <davesag@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "http-status-codes": "^1.3.2",
    "node-http-error": "^2.0.0",
    "swagger-express-validator": "^1.0.0",
    "swagger-routes-express": "^2.1.0",
    "swagger-ui-express": "^4.0.2",
    "traverse-folders": "^1.1.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^1.3.0",
    "@stryker-mutator/javascript-mutator": "^1.3.0",
    "@stryker-mutator/mocha-framework": "^1.3.0",
    "@stryker-mutator/mocha-runner": "^1.3.0",
    "chai": "^4.2.0",
    "chai-almost": "^1.0.1",
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.1.0",
    "lint-staged": "^8.1.5",
    "mocha": "^6.1.4",
    "mock-req-res": "^1.1.0",
    "nyc": "^14.0.0",
    "prettier": "^1.17.0",
    "proxyquire": "^2.1.0",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "supertest": "^4.0.2"
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/index.js",
      "src/utils/logger.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true,
    "cache": true
  },
  "greenkeeper": {
    "ignore": []
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "proseWrap": "never"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
